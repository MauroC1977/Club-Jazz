@model jazzclub.Models.usuario

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Principal.cshtml";
}

<!-- CONTACT -->
<section class="bg-light py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
               
                <form method="post" action="/Home/Index">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <i class="fas fa-user input-group-text">

                            </i>
                        </div>
                        <input type="text" class="form-control" placeholder="Name" name="nombre">
                        @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <i class="fas fa-envelope input-group-text">

                            </i>
                        </div>
                        <input type="text" class="form-control" placeholder="celular" name="celular">
                        @Html.ValidationMessageFor(model => model.celular, "", new { @class = "text-danger" })
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <i class="fas fa-envelope input-group-text">

                            </i>
                        </div>
                        <input type="Email" class="form-control" placeholder="Email" name="email">
                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <i class="fas fa-envelope input-group-text">

                            </i>
                        </div>
                        <input type="text" class="form-control" placeholder="ciudad" name="ciudad">
                        @Html.ValidationMessageFor(model => model.ciudad, "", new { @class = "text-danger" })
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <i class="fas fa-envelope input-group-text">

                            </i>
                        </div>
                        <input type="text" class="form-control" placeholder="fecharegistro" name="fecharegistro">
                        @Html.ValidationMessageFor(model => model.fecharegistro, "", new { @class = "text-danger" })
                    </div>


                    <button class="btn btn-primary btn-lg btn-block">
                        Registrarse
                    </button>
                </form>
            </div>
            <div class="col-lg-3 align-self-center">
                
            </div>
        </div>
    </div>
</section>